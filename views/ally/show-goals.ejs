<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
        <link type="text/css" rel="stylesheet" href="../css/style.css">
    </head>
    <body>
        <div class="container top">
            <div class="container header">
                <h1>Your Completed Goals</h1>
            </div>
        </div>
        <div class="container">
            <ul>
                <% for (let i = 0; i < goals.length; i++) { %>
                    <% if (goals[i].completed === true) { %>
                        <li>
                            Description: <%=goals[i].description%> /
                            Completed: <%=goals[i].updatedAt%>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
        <a href="/ally"><button type="button" name="back">Back To Main</button></a>
    </body>
</html>
