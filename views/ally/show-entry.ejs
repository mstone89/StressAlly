<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <div class="container">
            <h1>Your Entry</h1>
        </div>
        <dl>
            <dt>Date:</dt>
            <dd><%=entry.date%></dd>
            <dt>Rating:</dt>
            <dd><%=entry.rating%></dd>
            <dt>Foods:</dt>
            <dd>
                <% if (entry.food.length <= 0 || entry.food[0] === '') { %>
                    None
                <% } else { %>
                    <%=entry.food%>
                <% } %>
            </dd>
            <dt>Sleep:</dt>
            <dd><%=entry.sleep%></dd>
            <dt>Meditated?</dt>
            <dd>
                <% if (entry.meditate === true) { %>
                    Yes
                <% } else { %>
                    No
                <% } %>
            </dd>
            <dt>Exercised?</dt>
            <dd>
                <% if (entry.exercise === true) { %>
                    Yes
                <% } else { %>
                    No
                <% } %>
            </dd>
            <dt>Comments</dt>
            <dd>
                <% if (entry.comments === null || entry.comments === '') { %>
                    None
                <% } else { %>
                    <%=entry.comments%>
                <% } %>
            </dd>
        </dl>
        <a href="/ally/<%=entry.id%>/edit"><button>Edit Entry</button></a>
        <form action="/ally/<%=entry.id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Entry"/>
        </form>
        <a href="/ally/entries"><button type="button" name="back">Back To Entries</button></a>
    </body>
</html>
