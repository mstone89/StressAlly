<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
        <link type="text/css" rel="stylesheet" href="../css/style.css">
    </head>
    <body>
        <div class="container top">
            <div class="container header">
                <h1>Set A New Goal</h1>
            </div>
        </div>
        <div class="container">
            <form class="" action="/ally/new-goal" method="POST">
                <input type="text" name="description" placeholder="start small!">
                <button type="submit" name="">Let's Go!</button>
            </form>
        </div>
        <div class="container">
            <h3>Your Completed Goals</h3>
            <ul>
                <% for (let i = 0; i < goals.length; i++) { %>
                    <% if (goals[i].completed === true) { %>
                        <li>
                            Description: <%=goals[i].description%> /
                            Completed: <%=goals[i].updatedAt%>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
        <a href="/ally"><button type="button" name="back">Back To Main</button></a>
    </body>
</html>
