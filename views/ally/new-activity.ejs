<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <div class="container top">
            <div class="container header">
                <h1>Your Activities</h1>
            </div>
        </div>
        <div class="container">
            <h3>Add a new activity</h3>
            <form class="" action="/ally/new-activity" method="POST">
                <input type="text" name="name" placeholder="activity name">
                <input type="submit" name="" value="create">
            </form>
            <h3>Choose an activity</h3>
            <% for (let i = 0; i < activities.length; i++) { %>
                <form action="/ally/activity/<%=activities[i].id%>?_method=PUT" method="POST">
                    <input type="submit" name="active" value="<%=activities[i].name%>"/>
                </form>
            <% } %>
        </div>
        <a href="/ally"><button type="button" name="back">Back To Main</button></a>
    </body>
</html>
